<?xml version="1.0" encoding="utf-8"?>

<layout>
    <data>

        <variable name="model" type="com.qjuzi.qnet.pages.home.model.HomeStore.GridModel"/>
    </data>

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/bg_gridlayout_item"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:background="@drawable/common_background_borderless"
                    android:onClick="@{model::onClick}"
                    android:orientation="vertical">
                <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_columnWeight="1"
                        android:tint="@{model.imgTint}"
                        android:src="@{model.imgId}"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="@{model.title}"/>
            </LinearLayout>
    </LinearLayout>
</layout>
